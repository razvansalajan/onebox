@model OneBox_WebServices.ViewModels.FileSystemViewModel

<div class="dropdown">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">        
        New
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">       
        <li class="dropdown_new" data-toggle="modal" data-target="#myModal"> <span style="cursor:default">folder </span></li>
    </ul>
</div>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                New folder: <input id="new_folder_input_field" type="text" name="new_folder_name"><br>
            </div>
            <div class="modal-footer">
                <button type="button" id="create_new_folder" class="btn btn-default" data-dismiss="modal">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


